{% extends "templates/app.twig" %}

{% block container %}

<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Zmiana hasła</h3>
	</div>
	<div class="panel-body">
		<form action="{{ path_for('auth.password.change') }}" method="POST" autocomplete="off">
			<div class="form-group{{ errors.password_old ? ' has-error' : ''}}">
				<label for="password_old">Aktualne hasło</label>
				<input type="password" name="password_old" id="password_old" class="form-control">
				{% if errors.password_old %}
				<span class="help-block">{{ errors.password_old | first }}</span>
				{% endif %}
			</div>
			<div class="form-group{{ errors.password1 ? ' has-error' : ''}}">
				<label for="password1">Nowe hasło</label>
				<input type="password" name="password1" id="password1" class="form-control">
				{% if errors.password1 %}
				<span class="help-block">{{ errors.password1 | first }}</span>
				{% endif %}
			</div>
			<div class="form-group{{ errors.password2 ? ' has-error' : ''}}">
				<label for="password2">Powtórz nowe hasło</label>
				<input type="password" name="password2" id="password2" class="form-control">
				{% if errors.password2 %}
				<span class="help-block">{{ errors.password2 | first }}</span>
				{% endif %}
			</div>
			<button type="submit" class="btn btn-default">Zmień</button>
			{{ csrf.field | raw }}
		</form>
	</div>
</div>
{% endblock %}