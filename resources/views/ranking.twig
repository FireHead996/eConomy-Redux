{% extends "templates/app.twig" %}

{% block container %}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Ranking</h3>
    </div>
    <div class="panel-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Miejsce</th>
                    <th>Gracz</th>
                    <th>Punkty</th>
                </tr>
            </thead>
            
            {% for plr in players %}
            <tbody>
                <tr>
                    <th>{{ loop.index }}</th>
                    <td>{{ plr.nickname|e }}</td>
                    <td>{{ plr.points }}</td>
                </tr>
            </tbody>
            {% endfor %}
        </table>
    </div>
</div>
{% endblock %}
